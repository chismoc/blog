<div class="row">
    <div class="col-4">
        <%= image_tag(@user.avatar, style: "width:150px; height: 150px; border-radius:100%") if @user.avatar.attached? %>
    </div>
    <div class="col-8">
    <h1><%= @user.full_name %></h1>
    <h6>
        <%= pluralize(@user.comments.size, "comment") %> |
        <%= pluralize(@user.views,"view") %> |
        <%= pluralize(@total_views,"total Post view") %>
    </h6>
</div>
<div class="row">
    <div class="col-1">
    </div>

    <div class="col-10">
        <% @posts.each do |post| %>
            <div class="card mt-3">
                <div class="card-body">
                <h5 class="card-title"><%= link_to post.title, post %></h5>
                <p class="card-text"><%= "#{time_ago_in_words(post.created_at)} ago" %></p>
                <p class="card-text"><%= post.body.to_plain_text.truncate_words(100) %></p>
                </div>
            </div>
        <% end %>
        <div class="col-1"></div>
    </div>

</div>
</div>
<p>Find me in app/views/users/profile.html.erb</p>
