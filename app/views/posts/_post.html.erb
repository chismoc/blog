<div id="<%= dom_id post %>">
  <div class="card">
      <h4 class="card-header"><%= post.title %></h4>
        <div class="card-body">
        <h5>posted by <%= link_to post.user.full_name, user_path(post.user) %></h5>
        <h6><%= pluralize(post.views, "view") %></h6>
        <div>
          <%= post.body %>
        </div>
    </div>
</div>


