<div class="card">
  <h2 class="card-header">Edit <%= resource_name.to_s.humanize %></h2>
    <div class="card-body">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
        <div class='row'>
          <div class="col-9">
              <div class="form-group mb-2 ">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
          </div>
          <div class="form-group mb-2">
            <%= f.label :avatar %><br />
            <%= f.file_field :avatar %>
          </div>

          <div class="form-group mb-2">
            <%= f.label :first_name %><br />
            <%= f.text_field :first_name, class: 'form-control' %>
          </div>

          <div class="form-group mb-2">
            <%= f.label :last_name %><br />
            <%= f.text_field :last_name, class: 'form-control' %>
          </div>
        </div>
   </div>
</div>
<div class="card">
  <%= fields_for :address, resource.address do |c| %>
    <%= c.hidden_field :id %>
    <legend class="card-header"><h4>Address</h4></legend>
<div class="card-body">
    <div class='row'>
       <div class="col-9">
        <div class="form-group mb-2">
          <%= c.label :street %><br />
          <%= c.text_field :street, class: 'form-control' %>
        </div>
        <div class="form-group mb-2">
          <%= c.label :city %><br />
          <%= c.text_field :city, class: 'form-control' %> 
        </div>
        <div class="form-group mb-2">
          <%= c.label :state %><br />
          <%= c.text_field :state, class: 'form-control' %>
        </div>
        <div class="form-group mb-2">
          <%= c.label :zip %><br />
          <%= c.text_field :zip, class: 'form-control' %>
        </div>
        <div class="form-group mb-2">
          <%= c.label :country %><br />
          <%= c.text_field :country, class: 'form-control' %>
        </div>
    </div>
  <% end %>
</div>
</div>

<div class="card">
  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>
<legend class="card-header"><h4>Password</h4></legend>
<div class="card-body">
    <div class='row'>
       <div class="col-9">
        <div class="form-group mb-2">
          <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
          <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
          <% if @minimum_password_length %>
            <br />
            <em><%= @minimum_password_length %> characters minimum</em>
          <% end %>
        </div>

        <div class="form-group mb-2">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
        </div>

        <div class="form-group mb-2">
          <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
          <%= f.password_field :current_password, autocomplete: "current-password", class: 'form-control' %>
        </div>

        <div class="actions">
          <%= f.submit "Update" %>
        </div>
        <% end %>   
      </div>
    </div>
  </div>
</div>

<div class="card mt-4">
  <h3 class="card-header">Cancel my account</h3>
    <div class="card-body">
      <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
    </div>
</div>
<div class="mb-2">
  <%= link_to "Back", :back %>
</div>

